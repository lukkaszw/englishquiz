{
  "compilerOptions": {
    "target": "es2018",                          
    "module": "commonjs",
    "moduleResolution": "node",                 
    "lib": ["es6"],                     
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",                          
    "rootDir": "./src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
